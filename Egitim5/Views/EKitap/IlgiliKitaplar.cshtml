@using Entity
@using Entity.Models
@model IEnumerable<EKitap>
@{ Layout = null;}

<div class="container">
    <div class="row">
        <div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">
            <ul class="event-list">
        @foreach (EKitap item in Model)
        {
            <li>
                <time datetime="2014-07-20 0000">
                    <span class="day">@item.EklenmeTarihi.Day</span>
                    <span class="month">@item.EklenmeTarihi.Month</span>
                    <span class="year">@item.EklenmeTarihi.Year</span>
                </time>
                <div class="info">
                    <h2 class="title">@item.EKitapBaslik</h2>
                    <p class="desc">@item.EKitapIcerik</p>
                    <ul>
                        @if (item.EKitapinKonusu != null && item.EKitapinKonusu.Count != 0)
                        {
                            foreach (Konu konu in item.EKitapinKonusu.Take(2))
                            {
                                <li style="width:50%;"><span class="fa fa-globe"></span> @konu.KonuBaslik</li>
                            }
                        }
                       
                       
                    </ul>
                </div>
                @*<div class="social">
                    <ul>
                        <li class="facebook" style="width:33%;"><a href="#facebook"><span class="fa fa-facebook"></span></a></li>
                        <li class="twitter" style="width:34%;"><a href="#twitter"><span class="fa fa-twitter"></span></a></li>
                        <li class="google-plus" style="width:33%;"><a href="#google-plus"><span class="fa fa-google-plus"></span></a></li>
                    </ul>
                </div>*@
            </li>
        }
                
            </ul>
        </div>
    </div>
</div>

